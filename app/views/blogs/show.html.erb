<% content_for :title, "#{@blog.title} - Blog Task" %>

<div class="blog-show-container">
  <div class="blog-article">
    <div class="blog-header">
      <h1 class="blog-title"><%= @blog.title %></h1>
      <div class="blog-meta">
        <span class="blog-date">
          <%= @blog.created_at.strftime("%B %d, %Y at %I:%M %p") %>
        </span>
        <span class="blog-org">
          Organization: <%= @current_user.org.name %>
        </span>
      </div>
    </div>

    <% if flash[:alert] %>
      <div class="alert-message error">
        <%= flash[:alert] %>
      </div>
    <% end %>

    <div class="blog-content">
      <%= @blog.body.present? ? simple_format(@blog.body) : content_tag(:p, "No content available.", class: "no-content") %>
    </div>

    <div class="blog-footer">
      <%= link_to "‚Üê Back to Blogs", blogs_path, class: "back-link" %>
      <div class="blog-actions">
        <% if @current_user.role == 1 %>
          <div class="admin-actions">
            <%= link_to "Edit", edit_blog_path(@blog), class: "btn-edit" %>
            <%= link_to "Delete", delete_blog_path(@blog), 
                data: { turbo_method: :delete, confirm: "Are you sure you want to delete this blog?" }, 
                class: "btn-delete" %>
          </div>
        <% end %>
        <span class="blog-updated">
          Last updated: <%= @blog.updated_at.strftime("%B %d, %Y") %>
        </span>
      </div>
    </div>
  </div>
</div>

<style>
  .blog-show-container {
    max-width: 900px;
    margin: 0 auto;
    padding: 40px 20px;
  }

  .blog-article {
    background: white;
    border-radius: 12px;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    padding: 48px;
  }

  .blog-header {
    margin-bottom: 32px;
    padding-bottom: 24px;
    border-bottom: 2px solid #e2e8f0;
  }

  .blog-title {
    font-size: 42px;
    font-weight: 700;
    color: #1a202c;
    margin: 0 0 20px 0;
    line-height: 1.2;
  }

  .blog-meta {
    display: flex;
    flex-wrap: wrap;
    gap: 16px;
    font-size: 14px;
    color: #718096;
  }

  .blog-date,
  .blog-org {
    display: flex;
    align-items: center;
  }

  .blog-date::before {
    content: "üìÖ";
    margin-right: 6px;
  }

  .blog-org::before {
    content: "üè¢";
    margin-right: 6px;
  }

  .alert-message {
    padding: 16px 20px;
    border-radius: 8px;
    font-size: 14px;
    margin-bottom: 32px;
  }

  .alert-message.error {
    background-color: #fed7d7;
    border: 1px solid #fc8181;
    color: #c53030;
  }

  .blog-content {
    font-size: 18px;
    line-height: 1.8;
    color: #2d3748;
    margin-bottom: 48px;
  }

  .blog-content p {
    margin-bottom: 24px;
  }

  .blog-content p:last-child {
    margin-bottom: 0;
  }

  .blog-footer {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding-top: 24px;
    border-top: 2px solid #e2e8f0;
    flex-wrap: wrap;
    gap: 16px;
  }

  .back-link {
    color: #667eea;
    text-decoration: none;
    font-weight: 600;
    font-size: 16px;
    transition: color 0.2s;
    padding: 10px 20px;
    border: 2px solid #667eea;
    border-radius: 8px;
    display: inline-block;
  }

  .back-link:hover {
    background-color: #667eea;
    color: white;
  }

  .blog-actions {
    display: flex;
    align-items: center;
    gap: 16px;
    flex-wrap: wrap;
  }

  .admin-actions {
    display: flex;
    gap: 8px;
  }

  .btn-edit,
  .btn-delete {
    padding: 10px 20px;
    font-size: 14px;
    font-weight: 600;
    border-radius: 6px;
    text-decoration: none;
    transition: all 0.2s;
    display: inline-block;
  }

  .btn-edit {
    background-color: #48bb78;
    color: white;
    border: none;
  }

  .btn-edit:hover {
    background-color: #38a169;
  }

  .btn-delete {
    background-color: #f56565;
    color: white;
    border: none;
  }

  .btn-delete:hover {
    background-color: #e53e3e;
  }

  .blog-updated {
    font-size: 14px;
    color: #a0aec0;
  }

  @media (max-width: 768px) {
    .blog-article {
      padding: 32px 24px;
    }

    .blog-title {
      font-size: 32px;
    }

    .blog-content {
      font-size: 16px;
    }

    .blog-footer {
      flex-direction: column;
      align-items: flex-start;
    }
  }
</style>
